        android:paddingStart="3dp"
        android:paddingTop="10dp"
        android:paddingEnd="3dp"
        android:text="Address:" />
    <TextView
        android:id="@+id/textViewEditDoctorAddress"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
